# KMFlow Platform - Environment Configuration
# Copy this file to .env and fill in the values

# ── Application ───────────────────────────────────────────────
APP_NAME=KMFlow
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# ── PostgreSQL (with pgvector) ────────────────────────────────
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=kmflow
POSTGRES_USER=kmflow
POSTGRES_PASSWORD=kmflow_dev_password
DATABASE_URL=postgresql+asyncpg://kmflow:kmflow_dev_password@localhost:5432/kmflow

# ── Neo4j ─────────────────────────────────────────────────────
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=neo4j_dev_password

# ── Redis ─────────────────────────────────────────────────────
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379/0

# ── FastAPI Backend ───────────────────────────────────────────
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
CORS_ORIGINS=["http://localhost:3000"]

# ── Next.js Frontend ─────────────────────────────────────────
NEXT_PUBLIC_API_URL=http://localhost:8000

# ── Vector Embeddings ─────────────────────────────────────────
EMBEDDING_MODEL=all-mpnet-base-v2
EMBEDDING_DIMENSION=768
