# KMFlow Platform - Environment Configuration
# Copy this file to .env and fill in the values

# ── Application ───────────────────────────────────────────────
APP_NAME=KMFlow
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# ── PostgreSQL (with pgvector) ────────────────────────────────
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=kmflow
POSTGRES_USER=kmflow
POSTGRES_PASSWORD=kmflow_dev_password
DATABASE_URL=postgresql+asyncpg://kmflow:kmflow_dev_password@localhost:5432/kmflow

# ── Neo4j ─────────────────────────────────────────────────────
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=neo4j_dev_password

# ── Redis ─────────────────────────────────────────────────────
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379/0

# ── FastAPI Backend ───────────────────────────────────────────
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
CORS_ORIGINS=["http://localhost:3000"]

# ── Next.js Frontend ─────────────────────────────────────────
# API_URL is used server-side by Next.js rewrites (not exposed to client)
API_URL=http://localhost:8000

# ── JWT Authentication ──────────────────────────────────────────
# Primary signing key for issuing new JWTs. Must be a high-entropy
# random string (minimum 32 characters recommended).
JWT_SECRET_KEY=change-me-generate-a-random-secret

# Optional: comma-separated list of keys for zero-downtime rotation.
# When set, ALL listed keys are accepted for *verifying* incoming tokens.
# JWT_SECRET_KEY is always used for *signing* new tokens.
# Leave empty when not rotating keys.
# Example: JWT_SECRET_KEYS=new-key-alpha,old-key-beta
JWT_SECRET_KEYS=

# ── Vector Embeddings ─────────────────────────────────────────
EMBEDDING_MODEL=all-mpnet-base-v2
EMBEDDING_DIMENSION=768
